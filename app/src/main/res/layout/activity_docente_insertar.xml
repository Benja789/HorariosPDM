<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".docente.DocenteInsertarActivity">
    <TextView
        android:id="@+id/title_add_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/title_activity_insert_docente"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/linearlayout_first_name"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/title_add_teacher"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/text_first_name_teacher"/>
        <EditText
            android:id="@+id/text_first_name"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_second_name"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/linearlayout_first_name"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/text_second_name_teacher"/>
        <EditText
            android:id="@+id/text_second_name"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_first_lastname"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/linearlayout_second_name"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/text_first_lastname_teacher"/>
        <EditText
            android:id="@+id/text_first_lastname"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_second_lastname"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/linearlayout_first_lastname"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/text_second_lastname_teacher"/>
        <EditText
            android:id="@+id/text_second_lastname"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_married_lastname"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/linearlayout_second_lastname"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/text_lastname_married"/>
        <EditText
            android:id="@+id/text_married_lastname"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearlayout_profession"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/linearlayout_married_lastname"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="@string/text_profesion_teacher"/>
        <EditText
            android:id="@+id/text_profession"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_btn_actions"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/linearlayout_profession"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_clean_teacher"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:onClick="cleanFields"
            android:layout_marginLeft="10dp"
            android:text="@string/btn_limpiar" />
       <Button
           android:id="@+id/btn_save_teacher"
           android:layout_weight="2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:onClick="saveNewTeacher"
           android:layout_marginRight="10dp"
           android:text="@string/btn_insertar"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>