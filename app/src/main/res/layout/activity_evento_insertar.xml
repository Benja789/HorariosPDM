<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30dp">

    <TextView
        android:id="@+id/textViewNombreEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre_evento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editNombreEvento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLength="25"
        app:layout_constraintStart_toEndOf="@id/textViewNombreEvento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSeleccione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Seleccione:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editNombreEvento" />

    <Spinner
        android:id="@+id/spinnerTipoEvento"
        android:layout_width="0dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textViewSeleccione"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editNombreEvento" />

    <Button
        android:id="@+id/buttonInsertarEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="insertarEvento"
        android:layout_marginTop="20dp"
        android:text="@string/btn_insertar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerTipoEvento" />

    <Button
        android:id="@+id/buttonLimpiarTexto"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:onClick="limpiarTexto"
        android:text="@string/btn_limpiar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonInsertarEvento" />

</androidx.constraintlayout.widget.ConstraintLayout>