<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".docente.DocenteActualizarActivity">
    <TextView
        android:id="@+id/title_update_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/title_activity_update_teacher"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/layout_search_update_docente"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_update_teacher"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/text_search_teacher"/>
        <EditText
            android:id="@+id/text_search_update_teacher"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="11"
            android:inputType="text"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearlayout_first_update_name"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/layout_search_update_docente"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/text_first_name_teacher"/>
        <EditText
            android:id="@+id/text_first_name"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text=""/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>