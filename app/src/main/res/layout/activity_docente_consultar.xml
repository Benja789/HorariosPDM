<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".docente.DocenteConsultarActivity">

    <TextView
        android:id="@+id/title_query_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/title_activity_query_teacher"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/layout_search_docente"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_query_teacher"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/text_search_teacher"/>
        <EditText
            android:id="@+id/text_search_teacher"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="11"
            android:inputType="text"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linelayout_first_name"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/layout_search_docente"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_first_name_teacher"/>
        <TextView
            android:id="@+id/text_result_first_name_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linelayout_second_name"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/linelayout_first_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_second_name_teacher"/>
        <TextView
            android:id="@+id/text_result_second_name_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linelayout_first_lastname"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/linelayout_second_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_first_lastname_teacher"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/text_result_first_lastname_teacher"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linelayout_second_lastname"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/linelayout_first_lastname"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_second_lastname_teacher"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/text_result_second_lastname_teacher"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linelayout_married_name"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/linelayout_second_lastname"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_lastname_married"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/text_married_name"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linelayout_profession_teacher"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/linelayout_married_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_profesion_teacher"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/text_result_profession_teacher"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linelayout_status_teacher"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/linelayout_profession_teacher"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_state_teacher"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/text_status_teacher"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/action_search_teacher"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/linelayout_status_teacher"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:weightSum="2"
        android:layout_height="wrap_content">
       <Button
           android:layout_weight="1"
           android:text="@string/btn_limpiar"
           android:layout_width="match_parent"
           android:onClick="cleanSearchText"
           android:layout_height="wrap_content"/>
        <Button
            android:layout_weight="1"
            android:text="@string/btn_consultar"
            android:onClick="searchTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>